<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:background="@color/rv_back"
                    android:orientation="horizontal">
                   <androidx.appcompat.widget.AppCompatImageView
                           android:id="@+id/ivLogoBH"
                           android:src="@drawable/ambulance_3x"
                           android:layout_width="@dimen/_35sdp"
                           android:layout_height="@dimen/_35sdp"/>
                   <LinearLayout
                           android:layout_width="wrap_content"
                           android:orientation="vertical"
                           android:padding="@dimen/_5sdp"
                           android:layout_height="wrap_content">
                           <androidx.appcompat.widget.AppCompatTextView
                                   android:id="@+id/tvTitleHere"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:textSize="@dimen/_10sdp"
                                   android:fontFamily="@font/sf_pro_text_bold"
                                   android:textColor="@color/text_rv_main"
                                   android:text="Title Hare"/>
                           <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal">
                                   <TextView
                                           android:id="@+id/tvDate"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="10/02/2019"
                                           android:textColor="@color/text_rv_main"
                                           android:fontFamily="@font/sf_pro_text_bold"
                                           android:textSize="@dimen/_8sdp"/>
                                   <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_marginLeft="@dimen/_4sdp"
                                           android:textColor="@color/text_rv_main"
                                           android:fontFamily="@font/sf_pro_text_bold"
                                           android:text="."/>
                               <TextView
                                       android:id="@+id/tvTime"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="03:30pm"
                                       android:textColor="@color/text_rv_main"
                                       android:layout_marginLeft="@dimen/_4sdp"
                                       android:fontFamily="@font/sf_pro_text_bold"
                                       android:textSize="@dimen/_8sdp"/>
                           </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="horizontal"
                           android:layout_gravity="center"
                           android:gravity="right"
                           android:layout_marginRight="@dimen/_5sdp"
                           android:layout_height="wrap_content">
                          <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/text_rv_main"
                               android:fontFamily="@font/sf_pro_text_bold"
                               android:text="â‚¹"/>
                       <TextView
                               android:id="@+id/tvAmount"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/text_rv_main"
                               android:fontFamily="@font/sf_pro_text_bold"
                               android:text="100.32"/>
                   </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                           <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:orientation="horizontal"
                                   android:layout_height="wrap_content">
                                  <LinearLayout
                                          android:layout_width="wrap_content"
                                          android:orientation="vertical"
                                          android:layout_height="wrap_content">
                                      <androidx.appcompat.widget.AppCompatImageView
                                              android:src="@drawable/goto_destination_3x"
                                              android:layout_width="@dimen/_20sdp"
                                              android:layout_marginBottom="@dimen/_5sdp"
                                              android:layout_height="@dimen/_20sdp"/>
                                         <View
                                              android:id="@+id/Line"
                                              android:layout_width="@dimen/_1sdp"
                                              android:layout_height="@dimen/_15sdp"
                                              android:visibility="visible"
                                              android:layout_marginLeft="@dimen/_10sdp"
                                              android:layout_marginBottom="@dimen/_5sdp"
                                              android:background="@color/rv_back"/>
                                  </LinearLayout>
                               <LinearLayout
                                       android:layout_width="wrap_content"
                                       android:orientation="vertical"
                                       android:layout_marginLeft="@dimen/_10sdp"
                                       android:layout_height="wrap_content">

                                   <LinearLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:orientation="horizontal">
                                       <TextView
                                               android:layout_width="wrap_content"
                                               android:text="Pick-up Location"
                                               android:textSize="@dimen/_10sdp"
                                               android:textColor="@color/text_rv"
                                               android:fontFamily="@font/sf_pro_text_bold"
                                               android:layout_height="wrap_content"/>

                                       <TextView
                                               android:id="@+id/tvCancelled"
                                               android:layout_width="match_parent"
                                               android:text="Cancelled"
                                               android:gravity="right"
                                               android:padding="@dimen/_3sdp"
                                               android:layout_marginLeft="@dimen/_126sdp"
                                               android:visibility="gone"
                                               android:background="@drawable/background_booking_status_cancelled"
                                               android:textSize="@dimen/_9sdp"
                                               android:textColor="@color/white"
                                               android:fontFamily="@font/sf_pro_text_bold"
                                               android:layout_height="wrap_content"/>
                                       <TextView
                                               android:id="@+id/tvPending"
                                               android:layout_width="match_parent"
                                               android:text="Pending"
                                               android:gravity="right"
                                               android:padding="@dimen/_3sdp"
                                               android:layout_marginLeft="@dimen/_135sdp"
                                               android:visibility="gone"
                                               android:textSize="@dimen/_9sdp"
                                               android:textColor="@color/white"
                                               android:background="@drawable/background_booking_status_pending"
                                               android:fontFamily="@font/sf_pro_text_bold"
                                               android:layout_height="wrap_content"/>

                                   </LinearLayout>



                                   <TextView
                                           android:id="@+id/tvPickUpLocation"
                                           android:layout_width="wrap_content"
                                           android:text="Ganesh sernam jagatpur road, ahmedabad, gujrat 382470, india"
                                           android:textSize="@dimen/_9sdp"
                                           android:gravity="top|start"
                                           android:layout_marginTop="@dimen/_2sdp"
                                           android:textColor="@color/text_rv_main"
                                           android:fontFamily="@font/sf_pro_text_bold"
                                           android:layout_height="wrap_content"/>
                               </LinearLayout>
                           </LinearLayout>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                        android:src="@drawable/destination_3x"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_height="wrap_content">

                                 <TextView
                                       android:layout_width="wrap_content"
                                       android:text="Destination Location"
                                       android:textSize="@dimen/_10sdp"
                                       android:textColor="@color/text_rv"
                                       android:fontFamily="@font/sf_pro_text_bold"
                                       android:layout_height="wrap_content"/>

                                 <TextView
                                         android:id="@+id/tvDestinationLocation"
                                         android:layout_width="wrap_content"
                                         android:textSize="@dimen/_9sdp"
                                         android:text="D Block Asarwa, Haripura, Office ofthe Medical Superintendent Civil Hospital,Asarwa, Ahmedabad, Gujarat 380016"
                                         android:gravity="top|start"
                                         android:layout_marginTop="@dimen/_2sdp"
                                         android:textColor="@color/text_rv_main"
                                         android:fontFamily="@font/sf_pro_text_bold"
                                         android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>