<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.activity.TopupWalletActivity">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:background="@drawable/fl_backgound"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_profile"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="left"
                        android:background="@drawable/user_3x"
                        app:shapeAppearanceOverlay="@style/circleImageView"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="#aaacab"
                            android:fontFamily="@font/sf_pro_text_bold"
                            android:text="Balance"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/text_main"
                                android:fontFamily="@font/sf_pro_text_bold"
                                android:text="₹"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:textSize="@dimen/_24sdp"
                                android:textColor="@color/text_main"
                                android:fontFamily="@font/sf_pro_text_bold"
                                android:text="2000.32"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnWalletToBank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:text="Wallet to Bank"
                        android:maxLines="1"
                        android:gravity="center"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background"/>
            </LinearLayout>


            <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_65sdp"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/text_main"
                                    android:fontFamily="@font/sf_pro_text_bold"
                                    android:text="Hi,"/>
                            <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/text_main"
                                    android:fontFamily="@font/sf_pro_text_bold"
                                    android:text="Micheal Pearson"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="#d0d3f5"
                            android:fontFamily="@font/sf_pro_text_bold"
                            android:text="Welcome!"/>
                </LinearLayout>
        </FrameLayout>
        <TextView
                android:id="@+id/tvTopUpWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/blue"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="Topup Wallet"/>

        <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/tvTopUpWallet"
                android:background="@drawable/edittext_background"
                android:layout_height="@dimen/_40sdp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text_main"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:text="₹"/>
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textSize="@dimen/_15sdp"
                    android:background="@null"
                    android:textColorHint="@color/text_rv"
                    android:textColor="@color/text_main"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:hint="1000"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tvAddMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="#aaacab"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll"
                android:fontFamily="@font/sf_pro_text_bold"
                android:text="Add Money"/>
        <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/tvAddMoney"
                android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/add_money_background"
                android:layout_height="@dimen/_30sdp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text_main"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:text="₹"/>
            <TextView
                    android:id="@+id/tvAdd1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:text="1000"/>
        </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/add_money_background"
                    android:layout_height="@dimen/_30sdp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/text_main"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:text="₹"/>
                <TextView
                        android:id="@+id/tvAdd2000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:text="2000"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/add_money_background"
                    android:layout_height="@dimen/_30sdp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/text_main"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:text="₹"/>
                <TextView
                        android:id="@+id/tvAdd3000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/sf_pro_text_bold"
                        android:text="3000"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddMoney"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:padding="@dimen/_10sdp"
                android:text="Add Money"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/ll2"
                android:fontFamily="@font/sf_pro_text_bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:background="@drawable/button_background"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>