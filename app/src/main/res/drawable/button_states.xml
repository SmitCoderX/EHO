<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2.0" android:useLevel="false">
            <solid android:color="@color/white" />

            <stroke android:width="@dimen/_2sdp" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2.0" android:useLevel="false">
            <solid android:color="@color/blue" />

            <stroke android:width="@dimen/_2sdp" android:color="@color/blue" />
        </shape>
    </item>
</selector>